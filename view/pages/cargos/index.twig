{% extends "layout/layoutMaster.twig" %}
{% block title %}Lista de Cargos{% endblock %}
{% block content %}

    <!-- Início::page-header -->
    <div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
        <div>
            <p class="fw-semibold fs-18 mb-0">Gerenciar Cargos</p>
            <span class="fs-semibold text-muted">Visualize e gerencie todos os cargos do sistema.</span>
        </div>
        <div class="btn-list mt-md-0 mt-2">
                    <a href="{{ DOMAIN }}/cargos/create" class="btn btn-primary btn-wave">
            <i class="fas fa-briefcase me-2 align-middle d-inline-block"></i>Novo Cargo
        </a>
        </div>
    </div>
    <!-- Fim::page-header -->

    <!-- Início::row -->
    <div class="row">
        <div class="col-xl-12">
            {% include 'components/partials/datatable.twig' with {
                table_name: 'cargos',
                data_url: DOMAIN ~ '/api/cargos',
                title: 'Lista de Cargos',
                create_url: DOMAIN ~ '/cargos/create',
                show_create_button: false
            } %}
        </div>
    </div>
    <!-- Fim::row -->

{% endblock %}

{% block scripts %}
<script src="{{ DOMAIN }}/view/assets/js/cargos/index.js?v={{ VERSION }}"></script>
{% endblock %}