{% extends "layout/layoutMaster.twig" %}
{% block title %}Lista de Conferências{% endblock %}
{% block content %}

    <!-- Início::page-header -->
    <div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
        <div>
            <p class="fw-semibold fs-18 mb-0">Gerenciar Conferências</p>
            <span class="fs-semibold text-muted">Visualize e gerencie todas as conferências de produtos recebidos.</span>
        </div>
        <div class="btn-list mt-md-0 mt-2">
            <a href="{{ DOMAIN }}/conferencia/relatorio" class="btn btn-outline-info btn-wave me-2">
                <i class="fas fa-chart-bar me-2 align-middle d-inline-block"></i>Relatórios
            </a>
            <a href="{{ DOMAIN }}/conferencia/create" class="btn btn-primary btn-wave">
                <i class="fas fa-plus me-2 align-middle d-inline-block"></i>Nova Conferência
            </a>
        </div>
    </div>
    <!-- Fim::page-header -->

    <!-- Início::row -->
    <div class="row">
        <div class="col-xl-12">
            {% include 'components/partials/datatable.twig' with {
                table_name: 'conferencias',
                data_url: DOMAIN ~ '/api/conferencia/listar',
                title: 'Lista de Conferências',
                create_url: DOMAIN ~ '/conferencia/create',
                show_create_button: false
            } %}
        </div>
    </div>
    <!-- Fim::row -->

{% endblock %}

{% block scripts %}
<script src="{{ PATH }}/view/assets/js/conferencia/index.js?v={{ VERSION }}"></script>
{% endblock %}
