{% extends "layout/layoutMaster.twig" %}
{% block title %}Nova Conferência{% endblock %}
{% block content %}

    <!-- Início::page-header -->
    <div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
        <div>
            <p class="fw-semibold fs-18 mb-0">Nova Conferência</p>
            <span class="fs-semibold text-muted">Selecione uma NFE para iniciar a conferência de produtos.</span>
        </div>
        <div class="btn-list mt-md-0 mt-2">
            <a href="{{ DOMAIN }}/conferencia" class="btn btn-outline-secondary btn-wave">
                <i class="fas fa-arrow-left me-2 align-middle d-inline-block"></i>Voltar
            </a>
        </div>
    </div>
    <!-- Fim::page-header -->

    <!-- Início::row -->
    <div class="row">
        <div class="col-12">
            <div class="card custom-card">
                <div class="card-header">
                    <h3 class="card-title">Selecionar NFE para Conferência</h3>
                </div>
                <div class="card-body">
                    {% if nfes|length > 0 %}
                        <div class="row">
                            {% for nfe in nfes %}
                            <div class="col-xl-4 col-lg-6 col-md-6 mb-4">
                                <div class="card custom-card h-100">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center mb-3">
                                            <div class="me-3">
                                                <span class="avatar avatar-md bg-primary">
                                                    <i class="fas fa-file-invoice fs-16"></i>
                                                </span>
                                            </div>
                                            <div class="flex-fill">
                                                <h6 class="mb-1">NFE #{{ nfe.numero_nfe }}</h6>
                                                <small class="text-muted">{{ nfe.fornecedor_nome }}</small>
                                            </div>
                                        </div>
                                        
                                        <div class="row text-center mb-3">
                                            <div class="col-6">
                                                <div class="border-end">
                                                    <h6 class="mb-1 text-muted">Data Emissão</h6>
                                                    <span class="fw-semibold">{{ nfe.data_emissao|date('d/m/Y') }}</span>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <h6 class="mb-1 text-muted">Valor Total</h6>
                                                <span class="fw-semibold">R$ {{ nfe.valor_total|number_format(2, ',', '.') }}</span>
                                            </div>
                                        </div>
                                        
                                        <div class="d-grid">
                                            <a href="{{ DOMAIN }}/conferencia/nfe/{{ nfe.id }}/iniciar" class="btn btn-primary btn-wave">
                                                <i class="fas fa-play me-2"></i>Iniciar Conferência
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <div class="mb-3">
                                <i class="fas fa-check-circle fs-1 text-success"></i>
                            </div>
                            <h5 class="mb-2">Nenhuma NFE Pendente</h5>
                            <p class="text-muted">Todas as notas fiscais já foram conferidas ou não há NFEs cadastradas.</p>
                            <a href="{{ DOMAIN }}/conferencia" class="btn btn-primary btn-wave">
                                <i class="fas fa-arrow-left me-2"></i>Voltar para Conferências
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <!-- Fim::row -->

{% endblock %}
