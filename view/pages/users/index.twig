{% extends "layout/layoutMaster.twig" %}
{% block title %}Lista de Usuários{% endblock %}
{% block content %}

    <!-- Início::page-header -->
    <div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
        <div>
            <p class="fw-semibold fs-18 mb-0">Gerenciar Usuários</p>
            <span class="fs-semibold text-muted">Visualize e gerencie todos os usuários do sistema.</span>
        </div>
        <div class="btn-list mt-md-0 mt-2">
            <a href="{{ DOMAIN }}/users/create" class="btn btn-primary btn-wave">
                <i class="fas fa-user-plus me-2 align-middle d-inline-block"></i>Novo Usuário
            </a>
        </div>
    </div>
    <!-- Fim::page-header -->

    <!-- Início::row -->
    <div class="row">
        <div class="col-xl-12">
            {% include 'components/partials/datatable.twig' with {
                table_name: 'users',
                data_url: DOMAIN ~ '/api/users',
                title: 'Lista de Usuários',
                create_url: DOMAIN ~ '/users/create',
                show_create_button: false
            } %}
        </div>
    </div>
    <!-- Fim::row -->

{% endblock %}

{% block scripts %}
<script src="{{ PATH }}/view/assets/js/users/index.js?v={{ VERSION }}"></script>
{% endblock %} 