{% extends "layout/layoutMaster.twig" %}

{% block title %}Cores de Produtos - EmbalaBag{% endblock %}



{% block content %}
<!-- Início::page-header -->
<div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
    <div>
        <p class="fw-semibold fs-18 mb-0">Cores de Produtos</p>
        <span class="fs-semibold text-muted">Gerencie as cores dos produtos</span>
    </div>
    <div class="btn-list mt-md-0 mt-2">
        <a href="{{ DOMAIN }}/produtos" class="btn btn-outline-primary btn-wave">
            <i class="fas fa-arrow-left me-2 align-middle d-inline-block"></i>Voltar para Produtos
        </a>
    </div>
</div>
<!-- Fim::page-header -->

    <section>

        <div class="product_archive">

            <div class="row">

                <!-- NOVA CATEGORIA -->
                <div class="col-md-4">

                    <div class="card custom-card">
                        <div class="card-header justify-content-between align-items-center">
                            <div class="card-title">
                                <i class="fas fa-palette me-2"></i>Nova Cor
                            </div>
                        </div>
                        <div class="card-body">

                            <form method="POST" action="javascript:void(0)" id="save_cor">

                                <div class="form-group mb-4">
                                    <label class="form-label">Nome</label>
                                    <input name="cor_nome" id="cor_nome" type="text" value="{{ editar.cor_nome }}" class="form-control" placeholder="Nome da Cor">
                                    <input name="cor_old" type="hidden" value="{{ editar.cor_nome }}">
                                </div>

                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="form-group mb-4">
                                            <label class="form-label">Código</label>
                                            <input name="cor_codigo" id="cor_codigo" type="number" value="{{ editar.cor_codigo }}" class="form-control">
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group mb-4 position-relative">
                                            <label class="form-label">Cor</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control hex_cor" name="cor" size="7" value="{{ editar.cor }}" placeholder="#000000" id="colorInput">
                                                <button type="button" class="btn btn-outline-secondary" id="colorPickerBtn">
                                                    <i class="fas fa-eye-dropper"></i>
                                                </button>
                                            </div>
                                            <div class="pickr-container mt-2" id="colorPickerContainer"></div>
                                        </div>
                                    </div>
                                </div>

                                                                 <p class="submit">
                                     {% if editar.id %}<input type="hidden" id="id" name="id" value="{{ editar.id }}">{% endif %}
                                     <input type="hidden" id="action" name="action" value="{{ editar.id ? 'editar' : 'cadastrar' }}">
                                     <div class="d-flex gap-2">
                                         <input type="submit" id="salvar" class="btn btn-primary btn-lg" value="ADICIONAR NOVA COR">
                                         <button type="button" class="btn btn-outline-secondary btn-lg btn-limpar">
                                             <i class="fas fa-eraser me-2"></i>Limpar
                                         </button>
                                     </div>
                                 </p>

                            </form>

                        </div>
                    </div>
                    
                </div>


                <!-- LISTA DE CATEGORIAS -->
                <div class="col-md-8">
                    <div class="card custom-card">
                        <div class="card-header justify-content-between align-items-center">
                            <div class="card-title">
                                <i class="fas fa-list me-2"></i>Lista de Cores
                            </div>
                        </div>
                        <div class="card-body">

                            <div class="lista">
                                <div class="p-0">
                                    <div class="product_archive filter-bar">

                                        <table class="table" id="datatable">
                                            <thead>
                                                <tr>
                                                    <th>Nome</th>
                                                    <th>Código</th>
                                                    <th class="text-center" width="50">Cor</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                {% for cor in cores %}                                                    
                                                <tr>
                                                    <td>
                                                        <a href="javascript:void(0)" class="text-uppercase fw-bolder">{{ cor.cor_nome }}</a>
                                                        <div class="row-actions opacity-75">
                                                            <span class="edit"><a href="{{ DOMAIN }}/produtos/cores/editar/{{ cor.id }}" class="text-warning">Editar</a>  |  </span>
                                                            <span class="delete"><a href="javascript:void(0);" onclick="deletar_cor('{{ cor.id }}','{{ cor.cor_nome }}');" class="text-danger">Excluir</a></span>
                                                        </div>
                                                    </td>
                                                    <td>{{ cor.cor_codigo }}</td>
                                                    <td class="text-center" width="50" style="background-color: {{ cor.cor }};">
                                                        <span class="badge {{ cor.cor_nome == 'Preto' ? 'text-white' : 'text-black' }}">Cor</span>
                                                    </td>
                                                </tr>
                                                {% endfor %}

                                            </tbody>
                                        </table>


                                    </div>                                                  
                                </div>
                            </div>

                            <div class="form-group edit-term-notes">
                                <p>
                                    <strong>Nota:</strong><br>
                                    Excluindo uma Cor exclui as variaveis dos produtos com aquela Cor. Mas não exclui as variaveis já escolhida nos pedidos.
                                </p>
                            </div>

                        </div>
                    </div>
                </div>

            </div>

        </div>

    </section>

</section>


<script src="{{ DOMAIN }}/view/assets/vendors/datatables/js/jquery.dataTables.min.js?v={{ VERSION }}"></script>
<script src="{{ DOMAIN }}/view/assets/vendors/datatables/js/datatables.init.js?v={{ VERSION }}"></script>
<script src="{{ DOMAIN }}/view/assets/js/produtos/color-picker-cores.js?v={{ VERSION }}"></script>
<script src="{{ DOMAIN }}/view/assets/js/produtos/produtos_cor.js?v={{ VERSION }}"></script>

{% endblock %}