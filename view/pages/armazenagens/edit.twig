{% extends "layout/layoutMaster.twig" %}

{% block title %}Editar Armazenagem - EmbalaBag{% endblock %}



{% block content %}
<!-- Início::page-header -->
<div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
    <div>
        <p class="fw-semibold fs-18 mb-0">Editar Armazenagem</p>
        <span class="fs-semibold text-muted">Edite as informações da localização de armazenamento.</span>
    </div>
    <div class="btn-list mt-md-0 mt-2">
        <a href="{{ DOMAIN }}/armazenagens" class="btn btn-outline-primary btn-wave">
            <i class="fas fa-arrow-left me-2 align-middle d-inline-block"></i>Voltar para Armazenagens
        </a>
    </div>
</div>
<!-- Fim::page-header -->

<!-- Início::row -->
<div class="row">
    <div class="col-xl-12">
        <div class="card custom-card">
            <div class="card-header justify-content-between align-items-center">
                <div class="card-title">
                    <i class="fas fa-edit me-2"></i>Editar Armazenagem - {{ armazenagem.codigo }}
                </div>
            </div>
            <div class="card-body">
                <form id="formArmazenagem" class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label required">Código</label>
                        <input type="text" class="form-control" name="codigo" value="{{ armazenagem.codigo }}" required autocomplete="off" placeholder="Ex: A01, PRAT-01">
                        <small class="form-hint">Código único de identificação</small>
                    </div>
                    <div class="col-md-5">
                        <label class="form-label required">Descrição</label>
                        <input type="text" class="form-control" name="descricao" value="{{ armazenagem.descricao }}" required autocomplete="off" placeholder="Ex: Prateleira A, Gaveta 01">
                        <small class="form-hint">Nome descritivo da localização</small>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label required">Tipo</label>
                        <select class="form-select" name="tipo" required>
                            <option value="">Selecione...</option>
                            <option value="corredor" {% if armazenagem.tipo == 'corredor' %}selected{% endif %}>Corredor</option>
                            <option value="prateleira" {% if armazenagem.tipo == 'prateleira' %}selected{% endif %}>Prateleira</option>
                            <option value="gaveta" {% if armazenagem.tipo == 'gaveta' %}selected{% endif %}>Gaveta</option>
                            <option value="caixa" {% if armazenagem.tipo == 'caixa' %}selected{% endif %}>Caixa</option>
                            <option value="pallet" {% if armazenagem.tipo == 'pallet' %}selected{% endif %}>Pallet</option>
                            <option value="area" {% if armazenagem.tipo == 'area' %}selected{% endif %}>Área</option>
                        </select>
                        <small class="form-hint">Tipo de armazenagem</small>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label required">Setor</label>
                        <input type="text" class="form-control" name="setor" value="{{ armazenagem.setor }}" required autocomplete="off" placeholder="Ex: Almoxarifado, Estoque, Expedição">
                        <small class="form-hint">Setor onde está localizado</small>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Capacidade Máxima</label>
                        <div class="input-group">
                            <input type="number" class="form-control" name="capacidade_maxima" value="{{ armazenagem.capacidade_maxima }}" min="0" placeholder="0">
                            <span class="input-group-text">Unidades</span>
                        </div>
                        <small class="form-hint">Deixe em branco para capacidade ilimitada</small>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Status</label>
                        <div class="form-selectgroup">
                            <label class="form-selectgroup-item">
                                <input type="radio" name="status" value="ativo" class="form-selectgroup-input" {% if armazenagem.status == 'ativo' %}checked{% endif %}>
                                <span class="form-selectgroup-label">Ativo</span>
                            </label>
                            <label class="form-selectgroup-item">
                                <input type="radio" name="status" value="inativo" class="form-selectgroup-input" {% if armazenagem.status == 'inativo' %}checked{% endif %}>
                                <span class="form-selectgroup-label">Inativo</span>
                            </label>
                            <label class="form-selectgroup-item">
                                <input type="radio" name="status" value="manutencao" class="form-selectgroup-input" {% if armazenagem.status == 'manutencao' %}checked{% endif %}>
                                <span class="form-selectgroup-label">Manutenção</span>
                            </label>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">Observações</label>
                        <textarea class="form-control" name="observacoes" rows="3" placeholder="Informações adicionais sobre a localização de armazenagem">{{ armazenagem.observacoes }}</textarea>
                    </div>
                    <div class="col-12 d-flex justify-content-end mt-4">
                        <a href="{{ DOMAIN }}/armazenagens" class="btn btn-outline-primary me-2">Cancelar</a>
                        <button type="submit" class="btn btn-primary btn-wave">
                            <i class="fas fa-save me-2 align-middle d-inline-block"></i>Atualizar Armazenagem
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Fim::row -->
{% endblock %}

{% block scripts %}
{% include "components/partials/sweetalert.twig" %}
<script src="{{ PATH }}/view/assets/js/armazenagens/edit.js"></script>
{% endblock %} 