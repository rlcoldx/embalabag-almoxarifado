{% extends "layout/layoutMaster.twig" %}
{% block title %}Lista de Armazenagens{% endblock %}
{% block content %}

    <!-- Início::page-header -->
    <div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
        <div>
            <p class="fw-semibold fs-18 mb-0">Gerenciar Armazenagens</p>
            <span class="fs-semibold text-muted">Visualize e gerencie todos os endereços de armazenamento do sistema.</span>
        </div>
        <div class="btn-list mt-md-0 mt-2">
            <a href="{{ DOMAIN }}/armazenagens/mapa" class="btn btn-outline-info btn-wave me-2">
                <i class="fas fa-map-marker-alt me-2 align-middle d-inline-block"></i>Mapa
            </a>
            <a href="{{ DOMAIN }}/armazenagens/create" class="btn btn-primary btn-wave">
                <i class="fas fa-plus me-2 align-middle d-inline-block"></i>Nova Armazenagem
            </a>
        </div>
    </div>
    <!-- Fim::page-header -->

    <!-- Início::row -->
    <div class="row">
        <div class="col-xl-12">
            {% include 'components/partials/datatable.twig' with {
                table_name: 'armazenagens',
                data_url: DOMAIN ~ '/api/armazenagens',
                title: 'Lista de Armazenagens',
                create_url: DOMAIN ~ '/armazenagens/create',
                show_create_button: false
            } %}
        </div>
    </div>
    <!-- Fim::row -->

{% endblock %}

{% block scripts %}
<script src="{{ PATH }}/view/assets/js/armazenagens/index.js?v={{ VERSION }}"></script>
{% endblock %}