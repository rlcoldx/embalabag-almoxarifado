{% extends "layout/layoutMaster.twig" %}

{% block title %}Conferência de Produtos - EmbalaBag{% endblock %}

{% block styles %}
{% include "components/partials/datatable.twig" %}
{% include "components/partials/sweetalert.twig" %}
{% endblock %}

{% block content %}
<!-- Início::page-header -->
<div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
    <div>
        <p class="fw-semibold fs-18 mb-0">Conferência de Produtos</p>
        <span class="fs-semibold text-muted">Gerencie a conferência de produtos recebidos.</span>
    </div>
    <div class="btn-list mt-md-0 mt-2">
        <a href="{{ DOMAIN }}/recebimento/conferencia/create" class="btn btn-primary btn-wave">
            <i class="fas fa-plus me-2 align-middle d-inline-block"></i>Nova Conferência
        </a>
    </div>
</div>
<!-- Fim::page-header -->

<!-- Início::row -->
<div class="row">
    <div class="col-xl-12">
        <div class="card custom-card">
            <div class="card-header">
                <div class="card-title">
                    <h5 class="mb-0">Lista de Conferências</h5>
                </div>
            </div>
            <div class="card-body">
                <!-- Filtros -->
                <div class="row mb-3">
                    <div class="col-md-3">
                        <label class="form-label">Número NF</label>
                        <input type="text" class="form-control" id="filtroNumeroNF" placeholder="Digite o número da NF">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Produto</label>
                        <input type="text" class="form-control" id="filtroProduto" placeholder="Nome do produto">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Status Qualidade</label>
                        <select class="form-select" id="filtroQualidade">
                            <option value="">Todos</option>
                            <option value="excelente">Excelente</option>
                            <option value="bom">Bom</option>
                            <option value="regular">Regular</option>
                            <option value="ruim">Ruim</option>
                            <option value="inutilizavel">Inutilizável</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Data Início</label>
                        <input type="date" class="form-control" id="filtroDataInicio">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Data Fim</label>
                        <input type="date" class="form-control" id="filtroDataFim">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-12">
                        <button type="button" class="btn btn-primary btn-wave" id="btnFiltrar">
                            <i class="fas fa-search me-2"></i>Filtrar
                        </button>
                        <button type="button" class="btn btn-outline-secondary btn-wave" id="btnLimparFiltros">
                            <i class="fas fa-times me-2"></i>Limpar
                        </button>
                    </div>
                </div>

                <!-- DataTable -->
                <div class="table-responsive">
                    <table id="tableConferencias" class="table table-bordered text-nowrap">
                        <thead>
                            <tr>
                                <th>NF</th>
                                <th>Produto</th>
                                <th>Qtd. Esperada</th>
                                <th>Qtd. Recebida</th>
                                <th>Qtd. Avariada</th>
                                <th>Qualidade</th>
                                <th>Conferente</th>
                                <th>Data</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Dados carregados via AJAX -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Fim::row -->
{% endblock %}

{% block scripts %}
<script src="{{ DOMAIN }}/view/assets/js/recebimento/conferencia/index.js"></script>
{% endblock %} 