{% extends "layout/layoutMaster.twig" %}

{% block title %}Dashboard Recebimento - EmbalaBag{% endblock %}



{% block content %}
<!-- Início::page-header -->
<div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
    <div>
        <p class="fw-semibold fs-18 mb-0">Dashboard Recebimento</p>
        <span class="fs-semibold text-muted">Visão geral do sistema de recebimento e armazenagem.</span>
    </div>
    <div class="btn-list mt-md-0 mt-2">
        <a href="{{ DOMAIN }}/recebimento/relatorios" class="btn btn-outline-primary btn-wave">
            <i class="fas fa-chart-bar me-2 align-middle d-inline-block"></i>Relatórios
        </a>
    </div>
</div>
<!-- Fim::page-header -->

<!-- Início::row -->
<div class="row">
    <!-- Cards de Resumo -->
    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12">
        <div class="card custom-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <span class="avatar avatar-md bg-primary">
                            <i class="fas fa-file-invoice"></i>
                        </span>
                    </div>
                    <div class="flex-fill">
                        <h6 class="mb-1">Notas Fiscais</h6>
                        <h4 class="mb-0" id="totalNotasFiscais">0</h4>
                        <span class="text-muted fs-12">Total de NF-e</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12">
        <div class="card custom-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <span class="avatar avatar-md bg-success">
                            <i class="fas fa-clipboard-check"></i>
                        </span>
                    </div>
                    <div class="flex-fill">
                        <h6 class="mb-1">Conferências</h6>
                        <h4 class="mb-0" id="totalConferencias">0</h4>
                        <span class="text-muted fs-12">Produtos conferidos</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12">
        <div class="card custom-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <span class="avatar avatar-md bg-info">
                            <i class="fas fa-truck"></i>
                        </span>
                    </div>
                    <div class="flex-fill">
                        <h6 class="mb-1">Movimentações</h6>
                        <h4 class="mb-0" id="totalMovimentacoes">0</h4>
                        <span class="text-muted fs-12">Movimentações internas</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12">
        <div class="card custom-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <span class="avatar avatar-md bg-warning">
                            <i class="fas fa-tags"></i>
                        </span>
                    </div>
                    <div class="flex-fill">
                        <h6 class="mb-1">Etiquetas</h6>
                        <h4 class="mb-0" id="totalEtiquetas">0</h4>
                        <span class="text-muted fs-12">Etiquetas geradas</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Gráficos e Estatísticas -->
<div class="row">
    <!-- Gráfico de Status das NF -->
    <div class="col-xl-6 col-lg-6 col-md-12">
        <div class="card custom-card">
            <div class="card-header">
                <div class="card-title">
                    <h5 class="mb-0">Status das Notas Fiscais</h5>
                </div>
            </div>
            <div class="card-body">
                <canvas id="chartStatusNF" width="400" height="200"></canvas>
            </div>
        </div>
    </div>

    <!-- Gráfico de Movimentações por Tipo -->
    <div class="col-xl-6 col-lg-6 col-md-12">
        <div class="card custom-card">
            <div class="card-header">
                <div class="card-title">
                    <h5 class="mb-0">Movimentações por Tipo</h5>
                </div>
            </div>
            <div class="card-body">
                <canvas id="chartTipoMovimentacao" width="400" height="200"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Tabelas de Dados Recentes -->
<div class="row">
    <!-- NF Recentes -->
    <div class="col-xl-6 col-lg-6 col-md-12">
        <div class="card custom-card">
            <div class="card-header">
                <div class="card-title">
                    <h5 class="mb-0">Notas Fiscais Recentes</h5>
                </div>
                <div class="card-options">
                    <a href="{{ DOMAIN }}/recebimento/notas-fiscais" class="btn btn-sm btn-outline-primary">Ver Todas</a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Número</th>
                                <th>Fornecedor</th>
                                <th>Status</th>
                                <th>Data</th>
                            </tr>
                        </thead>
                        <tbody id="tabelaNFRecentes">
                            <!-- Dados carregados via AJAX -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Movimentações Recentes -->
    <div class="col-xl-6 col-lg-6 col-md-12">
        <div class="card custom-card">
            <div class="card-header">
                <div class="card-title">
                    <h5 class="mb-0">Movimentações Recentes</h5>
                </div>
                <div class="card-options">
                    <a href="{{ DOMAIN }}/recebimento/movimentacoes" class="btn btn-sm btn-outline-primary">Ver Todas</a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Tipo</th>
                                <th>Produto</th>
                                <th>Status</th>
                                <th>Data</th>
                            </tr>
                        </thead>
                        <tbody id="tabelaMovimentacoesRecentes">
                            <!-- Dados carregados via AJAX -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Alertas e Pendências -->
<div class="row">
    <div class="col-xl-12">
        <div class="card custom-card">
            <div class="card-header">
                <div class="card-title">
                    <h5 class="mb-0">Alertas e Pendências</h5>
                </div>
            </div>
            <div class="card-body">
                <div id="alertasPendencias">
                    <!-- Alertas carregados via AJAX -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Fim::row -->
{% endblock %}

{% block scripts %}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="{{ DOMAIN }}/view/assets/js/recebimento/dashboard/index.js"></script>
{% endblock %} 