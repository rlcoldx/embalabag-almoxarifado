{% extends "layout/layoutMaster.twig" %}

{% block title %}Etiquetas Internas - EmbalaBag{% endblock %}

{% block styles %}
{% include "components/partials/datatable.twig" %}
{% include "components/partials/sweetalert.twig" %}
{% endblock %}

{% block content %}
<!-- Início::page-header -->
<div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
    <div>
        <p class="fw-semibold fs-18 mb-0">Etiquetas Internas</p>
        <span class="fs-semibold text-muted">Gerencie as etiquetas internas do sistema.</span>
    </div>
    <div class="btn-list mt-md-0 mt-2">
        <a href="{{ DOMAIN }}/recebimento/etiquetas/create" class="btn btn-primary btn-wave">
            <i class="fas fa-plus me-2 align-middle d-inline-block"></i>Nova Etiqueta
        </a>
    </div>
</div>
<!-- Fim::page-header -->

<!-- Início::row -->
<div class="row">
    <div class="col-xl-12">
        <div class="card custom-card">
            <div class="card-header">
                <div class="card-title">
                    <h5 class="mb-0">Lista de Etiquetas</h5>
                </div>
            </div>
            <div class="card-body">
                <!-- Filtros -->
                <div class="row mb-3">
                    <div class="col-md-3">
                        <label class="form-label">Tipo de Etiqueta</label>
                        <select class="form-select" id="filtroTipo">
                            <option value="">Todos</option>
                            <option value="localizacao">Localização</option>
                            <option value="palete">Palete</option>
                            <option value="caixa">Caixa</option>
                            <option value="produto">Produto</option>
                            <option value="armazenagem">Armazenagem</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Status</label>
                        <select class="form-select" id="filtroStatus">
                            <option value="">Todos</option>
                            <option value="criada">Criada</option>
                            <option value="impressa">Impressa</option>
                            <option value="aplicada">Aplicada</option>
                            <option value="inativa">Inativa</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Código</label>
                        <input type="text" class="form-control" id="filtroCodigo" placeholder="Código da etiqueta">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Data Criação</label>
                        <input type="date" class="form-control" id="filtroData">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-12">
                        <button type="button" class="btn btn-primary btn-wave" id="btnFiltrar">
                            <i class="fas fa-search me-2"></i>Filtrar
                        </button>
                        <button type="button" class="btn btn-outline-secondary btn-wave" id="btnLimparFiltros">
                            <i class="fas fa-times me-2"></i>Limpar
                        </button>
                    </div>
                </div>

                <!-- DataTable -->
                <div class="table-responsive">
                    <table id="tableEtiquetas" class="table table-bordered text-nowrap">
                        <thead>
                            <tr>
                                <th>Código</th>
                                <th>Tipo</th>
                                <th>Referência</th>
                                <th>Status</th>
                                <th>Usuário</th>
                                <th>Data Criação</th>
                                <th>Data Impressão</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Dados carregados via AJAX -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Fim::row -->
{% endblock %}

{% block scripts %}
<script src="{{ DOMAIN }}/view/assets/js/recebimento/etiquetas/index.js"></script>
{% endblock %} 